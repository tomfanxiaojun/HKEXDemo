    <div class="banner__container">
        <div class="banner__background top-menu" style="background-image: url(../images/inner-banner.png);">
            <div class="container banner__breadcrumb">
                <ul>
                    <li><a href="#">{{title}}</a></li>
                    {{#if subTitle}}
                        <li><a href="#">{{subTitle}}</a></li>
                    {{/if}}
                </ul>
            </div>
            <h1 class="container banner__pageheading">{{headerText}}</h1>
            <div class="top-menu__title menu-title">
